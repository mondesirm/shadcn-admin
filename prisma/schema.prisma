generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int          @id @default(autoincrement())
  title       String
  label       TaskLabel
  status      TaskStatus
  priority    TaskPriority
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  assignee    String?
  description String?
  dueDate     DateTime?
}

enum TaskLabel {
  bug
  feature
  documentation
}

enum TaskStatus {
  backlog
  todo
  in_progress
  canceled
  done
}

enum TaskPriority {
  low
  medium
  high
  critical
}
